@{
    ViewData["Title"] = "DttIndex";
    var DttAccounts = ViewBag.DttAccounts as List<DttLesson02.Models.DttAccount>;
}

<div class="row">
    @if (DttAccounts != null)
    {
        foreach (var item in DttAccounts)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img class="card-img-top" src="@item.Avatar" alt="@item.Name">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">@item.Bio</p>
                        <p>
                            <a asp-controller="DttAccount" asp-action="Details" asp-route-id="@item.Id" class="btn btn-success btn-block">
                                View Details
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        }
    }
</div>
