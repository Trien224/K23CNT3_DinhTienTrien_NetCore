@{
    ViewData["Title"] = "Products";
    var products = ViewBag.Products as List<DttLesson02.Models.Product>; // cast ViewBag
}

<h2>Dữ liệu lấy ra từ ViewBag</h2>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Mã SP</th>
            <th>Tên SP</th>
            <th>Năm Xuất</th>
            <th>Giá</th>
        </tr>
    </thead>
    <tbody>
        @if (products != null)
        {
            foreach (var p in products)
            {
                <tr>
                    <td>@p.ProductId</td>
                    <td>@p.ProductName</td>
                    <td>@p.YearRelease</td>
                    <td>$@p.Price</td>
                </tr>
            }
        }
    </tbody>
</table>
