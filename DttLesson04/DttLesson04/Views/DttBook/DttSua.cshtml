@model DttLesson04.Models.DttBook

@{
    ViewData["Title"] = "Sửa Sách";
}

<h2>Sửa Thông Tin Sách</h2>

<form asp-action="DttGuiSua" method="post">
    <div class="form-group">
        <label for="DttId">Mã sách</label>
        <input asp-for="DttId" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label for="DttTitle">Tiêu đề</label>
        <input asp-for="DttTitle" class="form-control" />
        <span asp-validation-for="DttTitle" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="DttDescription">Mô tả</label>
        <textarea asp-for="DttDescription" class="form-control"></textarea>
        <span asp-validation-for="DttDescription" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="DttImage">Hình ảnh (URL)</label>
        <input asp-for="DttImage" class="form-control" />
        <span asp-validation-for="DttImage" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="DttPrice">Giá</label>
        <input asp-for="DttPrice" class="form-control" />
        <span asp-validation-for="DttPrice" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="DttPage">Số trang</label>
        <input asp-for="DttPage" class="form-control" />
        <span asp-validation-for="DttPage" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Lưu Thay Đổi</button>
    <a asp-action="DttIndex" class="btn btn-secondary">Hủy</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
