                @Html.DisplayFor(modelItem => item.DttPhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DttSalary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DttStatus)
            </td>
            <td>
                    @Html.ActionLink("Edit", "DttEdit", new { id = item.DttId }) |
